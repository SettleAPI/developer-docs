.theme-default-content {
  & {
    pre {
      & {
        code {
          & {
            * {
              font-family: 'Fira Code', monospace;
            }
          }
        }
      }
    }

    .md-api_reference_FiraCode {
      & {
        * {
          font-family: 'Fira Code', monospace;
        }

        h3, h4 {
          margin-top: -3.1rem;
          padding-top: 4.6rem;
          margin-bottom: 0;
        }

        p:last-child {
          margin-bottom: 3.3em;
        }
      }

      & {
        .md-api_reference_method_heading {
          margin-block-start: 3.33em;
          margin-block-end: 3.33em;

          a {
            color: $textColor;
            font-weight: 600;

            code {
              // color: $textColor;
            }
          }

          h4 {
            .badge {
              font-size: 16px;
            }
          }

          & {
            .badge {
              font-size: 1.35rem;
              height: auto;
              line-height: 1.25;
              padding: 1px 6px 0 6px;
              color: #fff;
              border-radius: 3px;
            }

            .badge.post {
              background-color: #EEC049;
            }

            .badge.get {
              background-color: #59B090;
            }

            .badge.put {
              background-color: #96CBE8;
            }

            .badge.delete {
              background-color: #E07166;
            }
          }
        }
      }
    }
  }

  & {
    p {
      a {
        & {
          code {
            color: $accentColor;
          }
        }
      }
    }
  }
}